@using DataLayer;

@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<VendorDetail>

<form>
    <section class="content-wrapper" role="main">
        <div class="content">
            <div class="content-bar">
                <ul class="breadcrumb breadcrumb-angle">
                    <li><a href="#" aria-label="home"><i class="fa fa-home"></i></a></li>
                    <li class="active">Vendor Details</li>
                </ul>
            </div><!-- /.content-bar -->
            <hr />

            <div class="content-body">
                <div class="col-lg-12">
                    <div class="featured-box featured-box-primary align-left mt-xlg">
                        <div class="box-content">
                            <div class="row">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12"><h4 class="heading-primary text-uppercase mb-md">Vendor Details</h4></div>
                                    </div>
                                    <hr class="tall">
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>
                <div class="panel" data-fill-color="true">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr class="bg-primary">
                                                <th colspan="11">Vendor Detail</th>
                                            </tr>
                                            <tr class="active">
                                                <th>Sl.no</th>
                                                <th>Vendor Name</th>
                                                <th>Vendor Code</th>
                                                <th>Contact Person</th>
                                                <th>Phone no</th>
                                                <th>Type of Firm</th>
                                                <th>Type of Business</th>
                                                <th>Gst No</th>
                                                <th>Registration Date</th>
                                                <th>Address</th>
                                                <th>Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int i = 1;
                                                foreach (var news in Model)
                                                {
                                                    <tr>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline"><strong>@i.</strong></span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.VendorName</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.VendorCode</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.ContactPerson</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.PhoneNumber</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.TypeofFirm</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.TypeOfBusiness</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.GSTNumber</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.CreatedDate.Value.ToString("dd/MM/yyyy")</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline">@news.FullAddress</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td>
                                                            <div class="form-group mt-lg">
                                                                <div class="btn-divider mr-2x mb-1x">

                                                                    @{
                                                                        //string linkText = string.Empty;
                                                                        if (news.Permitted == true)
                                                                        {
                                                                            <a id="lnkEdit" class="btn btn-danger" href="~/Vendor/VendorStatusChange/@news.Id">
                                                                                Not Approve
                                                                            </a>
                                                                            //linkText = "Not Approve";
                                                                        }
                                                                        else
                                                                        {
                                                                            //linkText = "Approve";
                                                                            <a id="lnkEdit" class="btn btn-primary" href="~/Vendor/VendorStatusChange/@news.Id">
                                                                                Approve
                                                                            </a>
                                                                        }
                                                                    }
                                                                    @*@linkText*@

                                                                </div>
                                                            </div>
                                                        </td>
                                                    </tr>
                                                    i = i + 1;
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="container">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.content -->
    </section>
</form>

