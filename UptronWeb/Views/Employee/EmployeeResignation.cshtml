@using DataLayer;
@{
    Layout = "~/Views/Shared/_LayoutEmployee.cshtml";
}
@model List<JobResignation>
<form action="EmployeeResignation" method="post">
    <input type="hidden" name="Id" id="hiddenId" />
    <section class="content-wrapper" role="main">
        <div class="content">
            <div class="content-bar">
                <ul class="breadcrumb breadcrumb-angle">
                    <li><a href="#" aria-label="home"><i class="fa fa-home"></i></a></li>
                    <li class="active center">Employee Resignation</li>
                </ul>
            </div><!-- /.content-bar -->
            <hr />

            <div class="content-body" style="height:400px;">
                <div class="col-lg-12">
                    <div class="featured-box featured-box-primary align-left mt-xlg">
                        <div class="box-content">
                            <div class="row">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                <div class="form-group">
                                                    <div class="form-group mt-lg">
                                                        <label class="col-sm-4 control-label">Vendor Name</label>
                                                        <div class="col-md-8">
                                                            <select name="Vendor" id="Vendor" required class="form-control required"></select>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                <div class="form-group mt-lg">
                                                    <label class="col-sm-4 control-label">Resignation Date</label>
                                                    <div class="col-sm-8">
                                                        <div class="input-group input-group-in">
                                                            <span class="input-group-addon"><i class="fa fa-calendar"></i></span>
                                                            <input type="date" id="ResignationDate" name="ResignationDate" data-input="daterangepicker"
                                                                   data-single-date-picker="true" data-show-dropdowns="true" class="form-control" required />
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-12">
                                                <div class="form-group mt-lg">
                                                    <label class="col-sm-2 control-label">Reason of Resignation</label>
                                                    <div class="col-sm-10">
                                                        <div class="input-group input-group-icon">
                                                            <textarea id="ResignationReason" class="form-control" rows="4" placeholder="Reason of Resignation" name="ResignationReason"></textarea>
                                                            <span class="input-group-addon">
                                                                <span class="icon"><i class="fa fa-map"></i></span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-6 col-md-offset-5">
                                                <br />
                                                <div class="btn-divider mr-2x mb-1x" role="divider">
                                                    <input id="btnSave" type="submit" value="Submit" name="submit" class="btn btn-primary">
                                                    <span class="label-divider" id="Span1">or</span>
                                                    <a href="~/Employee/EmployeeResignation" class="btn btn-default">Reset</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>

                <div class="panel" data-fill-color="true">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr class="bg-primary">
                                                <th colspan="4">Job Resignation Detail</th>
                                            </tr>
                                            <tr class="active">
                                                <th style="width:10%">Sl.no</th>
                                                <th style="width:20%">Vendor Name</th>
                                                <th style="width:20%">Resignation date</th>
                                                <th style="width:20%">Resignation Reason</th>
                                                @*<th style="width:30%">Action</th>*@
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int i = 1;
                                                foreach (var jobresignation in Model)
                                                {
                                                    <tr>
                                                        <td style="width:10%">
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline center"><strong>@i.</strong></span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td style="width:20%">
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline center">@jobresignation.VendorDetail.VendorName</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td style="width:20%">
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline center">@jobresignation.ResignationDate.Value.ToString("dd/MM/yyyy")</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        <td style="width:20%">
                                                            <div class="form-group mt-lg">
                                                                <div class="input-group input-group-icon">
                                                                    <span class="headline center">@jobresignation.ResignationReason</span>
                                                                </div>
                                                            </div>
                                                        </td>
                                                        @*<td style="width:30%">
                                                            <div class="form-group mt-lg">
                                                                <div class="btn-divider mr-2x mb-1x" role="divider">
                                                                    <a id="lnkEdit" href="#" class="btn btn-primary" onclick="javascript:EditJobResignation(@jobresignation.Id, @jobresignation.VendorId, '@jobresignation.ResignationDate', '@jobresignation.ResignationReason')">Edit</a>
                                                                    <span class="label-divider" id="Span1">or</span>
                                                                    <a href="#" class="btn btn-danger">Delete</a>
                                                                </div>
                                                            </div>
                                                        </td>*@
                                                    </tr>
                                                    i = i + 1;
                                                }

                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.panel -->
                    <div class="container">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.content -->
    </section>
</form>
<script type="text/javascript">
    $(document).ready(function () {
        fillVendor();
    })
    function fillVendor() {
        let dropdown = $('#Vendor');
        dropdown.empty();
        dropdown.append('<option value="">--Select Vendor Name--</option>');
        dropdown.prop('selectedIndex', 0);
        $.ajax({
            dataType: 'json',
            type: 'POST',
            url: '/Employee/GetSelectedVendor',
            async: true,
            contentType: "application/json; charset=utf-8",
            success: function (data) {
                $.each(data, function (key, entry) {
                    dropdown.append($('<option></option>').attr('value', entry.Id).text(entry.VendorName));
                });
            },
            failure: function (response) {
                alert(response);
            },
            error: function (response) {
                alert(response.responseText);
            }
        });
    }
    function EditJobResignation(Id, VendorId, ResignationDate, ResignationReason) {
        $('#hiddenId').val(Id);
        $('#btnSave').val('Update');
        $('#Vendor').val(VendorId);
        var dd = ResignationDate.substr(0, 2);
        var mm = ResignationDate.substr(3, 2);
        var yy = ResignationDate.substr(6, 4);
        $('#ResignationDate').val(yy + "-" + mm + "-" + dd);
        $('#ResignationReason').val(ResignationReason);
    }
</script>
