@using DataLayer;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<ContactUsDetail>
<form>
    <section class="content-wrapper" role="main">
        <div class="content">
            <div class="content-bar">
                <ul class="breadcrumb breadcrumb-angle">
                    <li><a href="#" aria-label="home"><i class="fa fa-home"></i></a></li>
                    <li class="active">Contact Us Detail</li>
                </ul>
            </div><!-- /.content-bar -->
            <hr />
            <div class="content-body">
                <div class="col-md-12">
                    <div class="panel" data-fill-color="true">
                        <div class="panel-body">
                            <div class="col-md-12">
                                <div class="row">
                                    <div class="table-responsive">
                                        <table class="table table-bordered">
                                            <thead>
                                                <tr class="bg-primary">
                                                    <th colspan="6">Contact Us Detail</th>
                                                </tr>
                                                <tr class="active">
                                                    <th>Sl.no</th>
                                                    <th>Name</th>
                                                    <th>Mobile</th>
                                                    <th>Email</th>
                                                    <th>Message</th>
                                                    <th>Requested Date</th>
                                                    <th>Action</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @{
                                                    int i = 1;
                                                    foreach (var contactUs in Model)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="input-group input-group-icon">
                                                                        <span class="headline center"><strong>@i</strong></span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="input-group input-group-icon">
                                                                        <span class="headline center">@contactUs.Name</span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="input-group input-group-icon">
                                                                        <span class="headline center">@contactUs.PhoneNumber</span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="input-group input-group-icon">
                                                                        <span class="headline center">@contactUs.Email</span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="input-group input-group-icon">
                                                                        <span class="headline center">@contactUs.Message</span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="input-group input-group-icon">
                                                                        <span class="headline center">@contactUs.CreatedDate.Value.ToString("dd/MM/yyyy")</span>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                            <td>
                                                                <div class="form-group mt-lg">
                                                                    <div class="btn-divider mr-2x mb-1x" role="divider">
                                                                        <a href="~/Admin/ArchiveContactUs/@contactUs.Id" class="btn btn-danger">Archive</a>
                                                                    </div>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        i = i + 1;
                                                    }
                                                }

                                            </tbody>
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div><!-- /.panel -->
                        <div class="container">
                        </div>
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.content -->
    </section>
</form>
