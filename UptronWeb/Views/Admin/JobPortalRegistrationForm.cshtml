@using DataLayer;
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
<link href="~/Content/App/admin/uptronweb.css" rel="stylesheet" />
<section class="content-wrapper" role="main">
    <div class="content">
        <div class="content-bar">
            <ul class="breadcrumb breadcrumb-angle">
                <li><a href="#" aria-label="home"><i class="fa fa-home"></i></a></li>
                <li class="active">Job Portal Registration Form</li>
            </ul>
        </div><!-- /.content-bar -->
        <hr />

        <div class="content-body">
            <div class="col-lg-12">
                <div class="featured-box featured-box-primary align-left mt-xlg">
                    <div class="box-content">
                        <div class="row">
                            <div class="form-group">
                                <div class="table-responsive">
                                    <table class="table table-bordered table-hover">
                                        <thead>
                                            <tr class="table-hover table-bordered bg-primary">
                                                <th colspan="3">Job Portal Registration Form List Detail</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr class="success jobregistration">
                                                <th scope="col">Field Name</th>
                                                <th scope="col">Active</th>
                                                <th scope="col">Mandatory</th>
                                            </tr>
                                            @{
                                                var list = ViewData["JobFormList"] as List<JobRegistrationForm>;
                                                if (list.Any())
                                                {
                                                    foreach (var form in list)
                                                    {
                                                        <tr>
                                                            <td>
                                                                <span>@form.FieldName</span>
                                                            </td>
                                                            <td>
                                                                @if (form.Active == true)
                                                                {
                                                                    <a id="lnkActive" class="btn btn-primary" href="/Admin/UpdateJobRegistrationForm?Id=@form.Id&ActionForm=InActive">InActive</a>
                                                                }
                                                                else
                                                                {
                                                                    <a id="lnkActive" class="btn btn-primary" href="/Admin/UpdateJobRegistrationForm?Id=@form.Id&ActionForm=Active">Active</a>
                                                                }
                                                            </td>
                                                            <td align="center" valign="middle">
                                                                @if (form.Mandatory == true)
                                                                {
                                                                    <a id="lnkActive" class="btn btn-primary" href="/Admin/UpdateJobRegistrationForm?Id=@form.Id&ActionForm=NotMandatory">Not Mandatory</a>
                                                                }
                                                                else
                                                                {
                                                                    <a id="lnkActive" class="btn btn-primary" href="/Admin/UpdateJobRegistrationForm?Id=@form.Id&ActionForm=Mandatory">Mandatory</a>
                                                                }
                                                            </td>
                                                        </tr>
                                                    }
                                                }
                                                else
                                                {
                                                    <tr>
                                                        <td colspan="3">
                                                            <span>No Record Found</span>
                                                        </td>
                                                    </tr>
                                                }
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <br />
            </div>
        </div>


        <div class="clearfix"></div>

    </div><!-- /.content -->

</section>
