@using DataLayer
@{
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
@model List<Partner>
<form action="Partner" method="post" enctype="multipart/form-data">
    <input type="hidden" id="hiddenId" name="Id"/>
    <section class="content-wrapper" role="main">
        <div class="content">
            <div class="content-bar">
                <ul class="breadcrumb breadcrumb-angle">
                    <li><a href="#" aria-label="home"><i class="fa fa-home"></i></a></li>
                    <li class="active">Our Partner's</li>
                </ul>
            </div><!-- /.content-bar -->
            <hr />

            <div class="content-body">
                <div class="col-lg-12">
                    <div class="featured-box featured-box-primary align-left mt-xlg">
                        <div class="box-content">
                            <div class="row">
                                <div class="form-group">
                                    <div class="row">
                                        <div class="col-md-12"><h4 class="heading-primary text-uppercase mb-md">Partner's</h4></div>
                                    </div>
                                    <hr class="tall">
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                <div class="form-group mt-lg">
                                                    <label class="col-sm-2 control-label">Partner's Name</label>
                                                    <div class="col-sm-10">
                                                        <div class="input-group input-group-in">
                                                            <input type="text" id="Partnername" name="Partnername" class="form-control" placeholder="Partner's Name" required />
                                                            <span class="input-group-addon">
                                                                <span class="icon"><i class="fa fa-user-secret"></i></span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="form-group mt-lg">
                                                    <label class="col-sm-2 control-label">Partner's URL</label>
                                                    <div class="col-sm-10">
                                                        <div class="input-group input-group-in">
                                                            <input type="text" id="PartnerUrl" name="PartnerUrl" class="form-control" placeholder="Partner's URL" required />
                                                            <span class="input-group-addon">
                                                                <span class="icon"><i class="fa fa-user-secret"></i></span>
                                                            </span>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                    <div class="row">
                                        <div class="form-group">
                                            <div class="col-md-6">
                                                <div class="form-group mt-lg">
                                                    <div class="form-group">
                                                        <div class="form-group mt-lg">
                                                            <label class="col-sm-4 control-label">Upload Image </label>
                                                            <div class="col-sm-8">
                                                                <div class="input-group input-group-icon">
                                                                    <input type="file" name="PartnerFile" id="PartnerFile" required />
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <br />
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <br />
                                                <div class="btn-divider mr-2x mb-1x" role="divider">
                                                    <input id="btnSave" type="submit" value="Submit" name="submit" class="btn btn-primary">
                                                    <span class="label-divider" id="Span1">or</span>
                                                    <a href="" class="btn btn-default">Reset</a>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <br />
                                </div>
                            </div>
                        </div>
                    </div>
                    <br />
                </div>

                <div class="panel" data-fill-color="true">
                    <div class="panel-body">
                        <div class="col-md-12">
                            <div class="row">
                                <div class="table-responsive">
                                    <table class="table table-bordered">
                                        <thead>
                                            <tr class="bg-primary">
                                                <th colspan="7">Partner's Detail</th>
                                            </tr>
                                            <tr class="active">
                                                <th style="width:10%">Sl.no</th>
                                                <th style="width:20%">Partner Name</th>
                                                <th style="width:20%">Partner Image</th>
                                                <th style="width:30%">Partner URL</th>
                                                <th style="width:20%">Action</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @{
                                                int i = 1;
                                                foreach (var partner in Model)
                                                {
                                            <tr>
                                                <td style="width:10%">
                                                    <div class="form-group mt-lg">
                                                        <div class="input-group input-group-icon">
                                                            <span class="headline center"><strong>@i.</strong></span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td style="width:20%">
                                                    <div class="form-group mt-lg">
                                                        <div class="input-group input-group-icon">
                                                            <span class="headline center">@partner.PartnerName</span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td style="width:20%">
                                                    <div class="form-group mt-lg">
                                                        <div class="input-group input-group-icon">
                                                            <div class="headline center">
                                                                <div class="partnersLogo clearfix">
                                                                    @{
                                                                        var base64 = Convert.ToBase64String(partner.PartnerImage);
                                                                        var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                                                        <img src="@imgsrc" alt="Image Partner" class="img-responsive galimg" style="height:100px; width:100px;" />
                                                                    }

                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td style="width:30%">
                                                    <div class="form-group mt-lg">
                                                        <div class="input-group input-group-icon">
                                                            <span class="headline center">@partner.PartnerUrl</span>
                                                        </div>
                                                    </div>
                                                </td>
                                                <td style="width:20%">
                                                    <div class="form-group mt-lg">
                                                        <div class="btn-divider mr-2x mb-1x" role="divider">
                                                            <a id="lnkEdit" href="#" class="btn btn-primary" onclick="javascript:EditPartnerDetail(@partner.Id,'@partner.PartnerName','@partner.PartnerUrl','@imgsrc')">Edit</a>
                                                            <span class="label-divider" id="Span1">or</span>
                                                            <a id="lnkDelete" class="btn btn-danger" onclick="javascript:return openDialogue(@partner.Id);" href="#" data-url="DeletePartner">Delete</a>
                                                        </div>
                                                    </div>
                                                </td>
                                            </tr>
                                                    i = i + 1;
                                                }
                                            }

                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div><!-- /.panel -->
                    <div class="container">
                    </div>
                </div>
            </div>
            <div class="clearfix"></div>
        </div><!-- /.content -->
    </section>
</form>

<script type="text/javascript">
    function RemoveFile() {
        $('#PartnerFile').removeClass('hidden');
        $('#PartnerFile').parent().find('a').remove();
        $('#PartnerFile').attr('required');
        return false;
    }

    function EditPartnerDetail(Id, PartnerName, PartnerUrl, imgsrc) {
        $('#PartnerFile').parent().find('a').remove();
        $('#hiddenId').val(Id);
        $('#btnSave').val('Update');
        $('#Partnername').val(PartnerName);
        $('#PartnerUrl').val(PartnerUrl);
        $('#PartnerFile').addClass('hidden');
        $('#PartnerFile').removeAttr('required');

        var html = "<a><img src='" + imgsrc + "' alt='Director Image' class='img-responsive galimg' style='height:100px;width:100px;'/></a><a href='javascript:void(0)' onclick='javascript:return RemoveFile()' style='color:red;padding-left:7px;'>X</a>";
        $(html).insertAfter('#PartnerFile');
    }
</script>

