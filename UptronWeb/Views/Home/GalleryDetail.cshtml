@using DataLayer;
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<GalleryPhotoMaster>

<!-- PAGE TITLE SECTION -->
<section class="clearfix pageTitleArea" style="background-image: url(../img/blog/pageTitle-bg.jpg);">
    <div class="container">
        <div class="pageTitle">
            <h1>Gallery Detail</h1>
        </div>
    </div>
</section>

<!-- ABOUT SECTION -->
<div class="example">
    <ol class="breadcrumb">
        <li><a href="~/Home/Index">Home</a></li>
        <li><a href="~/Home/Gallery">Gallery</a></li>
        <li class="active">Gallery Detail</li>
    </ol>
</div>
<!-- KEY FUNCTANIORIES & Services SECTION -->
<section class="clearfix">
    <div class="container">
        <div class="timeLine">
            <div class="row">
                <!-- KEY FUNCTANIORIES SECTION -->
                <div class="col-lg-12">
                    <section class="clearfix productSection">

                        <div class="container">
                            <div class="secotionTitle col-lg-12">
                                <h2 class="bg">Photo gallery</h2>
                            </div>
                            <!-- <div class="secotionTitle">
                              <h2>Our Major Projects </h2>
                            </div>-->
                            <div class="row">
                                <div class="col-sm-12">
                                    <div class="item active">
                                        <div class="row galleryset">
                                            @{
                                                foreach (var gallery in Model)
                                                {
                                                    var base64 = Convert.ToBase64String(gallery.Photo);
                                                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                                                    <div class="col-md-4 col-xs-12">
                                                        <div class="productImage isotopeSelector">
                                                            <figure>
                                                                <img src="@imgsrc" alt="Image Gallery" class="img-responsive galimg" style="height:200px;width:100%" />
                                                                <div class="overlay-background">
                                                                    <div class="inner"></div>
                                                                </div>
                                                                <div class="overlay">
                                                                    <a class="fancybox-pop" rel="portfolio-1" href="@imgsrc">
                                                                        <div class="overlayInfo">
                                                                            <h4><i class="fa fa-plus" aria-hidden="true"></i> <br></h4>
                                                                        </div>
                                                                    </a>
                                                                </div>
                                                            </figure>
                                                            @*<div class="event-details bg-white p-20">
                                                                    <h4 class="text-thm pb-5">Hospital Information System</h4>
                                                                </div>*@
                                                        </div>
                                                    </div>
                                                }
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                </div>

            </div>
        </div>
    </div>
</section>

