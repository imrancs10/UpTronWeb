@using DataLayer;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model List<GOCircular>
<!-- PAGE TITLE SECTION -->
<section class="clearfix pageTitleArea" style="background-image: url(../img/blog/pageTitle-bg.jpg);">
    <div class="container">
        <div class="pageTitle">
            <h1>GO's & Circular</h1>
        </div>
    </div>
</section>

<!-- ABOUT SECTION -->
<div class="example">
    <ol class="breadcrumb">
        <li><a href="~/Home/Index">Home</a></li>
        <li class="active">About GO's & Circular</li>
    </ol>
</div>
<!-- KEY FUNCTANIORIES & Services SECTION -->
<section class="clearfix">
    <div class="container">
        <div class="timeLine">
            <div class="row">
                <!-- KEY FUNCTANIORIES SECTION -->
                <div class="col-md-3">
                    @{
                        Html.RenderPartial("_ImportantLinksAndNewsUpdate");
                    }
                </div>
                <div class="col-lg-9">
                    <div class="blogPost tbl-content">
                        <div class="table table-responsive scrollbar-deep-purple bordered-deep-purple thin">
                            <table class="table table-bordered table-hover table-striped" style="width:100%">
                                <thead>
                                    <tr class="table-primary">
                                        <th scope="col" style="width:10%">संख्या</th>
                                        <th scope="col" style="width:25%">शासनादेश-संख्या</th>
                                        <th scope="col" style="width:20%">दिनांक</th>
                                        <th scope="col" colspan="2" style="width:35%">विषय</th>
                                        <th scope="col" style="width:10%">डाउनलोड</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @{
                                        int i = 1;
                                        foreach (var goCircular in Model)
                                        {
                                            <tr>
                                                <th scope="row" style="width:10%">@i.</th>
                                                <td style="word-wrap:break-word;width:25%">@goCircular.GONumber</td>
                                                <td style="width:20%">@goCircular.GODate.Value.ToString("dd/MM/yyyy")</td>
                                                <td colspan="2" style="word-wrap:break-word;width:35%">@goCircular.Subject</td>
                                                <td class="views-field views-field-field-attached" data-label="Download" style="width:10%">
                                                    <a href="~/Admin/ViewFileGoCircular/@goCircular.Id" target="_blank" style="color:#000;" type="application/pdf; length=2288280">
                                                        <img alt="application/pdf" class="file-icon" style="height:50px;width:50px;margin-bottom:0px" src="~/img/pdfimage.png" title="PDF file.">
                                                    </a>
                                                </td>
                                            </tr>
                                            i = i + 1;
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</section>

<!-- Partner Section -->
@{
    Html.RenderPartial("_Partner");
}

<!-- Footer Section -->
@{
    Html.RenderPartial("_Footer");
}

